<article class="home">
	<div class="breadcrumb">
	  <%= link_to 'Dashboard', home_index_path, class: "current-selection" %>
	</div>
	


	<% if current_user.entries %>
		<% if current_user.am_writing? == true %>
			<div class="hero">
		<% else %>
			<div class="hero-not">
		<% end %>

	<% end %>
		<div class="hero-inner">
			<div class="hero-copy">

			<% if current_user.entries %>
				<% if current_user.am_writing? == true %>
					<h1>You are on the Write Track!</h1>
					<span>P.S. Looks like you've been writing. Congrats!</span>
				<% else %>
					<h1>You need to get on the Write Track!</h1>
					P.S. Looks like you're a little behind on the writing...
				<% end %>
				<% end %>




				<br>
				<br>
				<p>You are currently <%= link_to @goal.type_is_dashboard.downcase, goal_path(@goal) %> "<em><%= link_to @project.name, project_goals_path(@project) %></em>".</p>	
			</div>
	    
	    	<div class="write-now">
		<%= link_to "Write Now!", new_project_entry_path(:project_id => @project.id, :goal_id => @goal) %>
			</div> <br>
		</div>
	</div>
</article>

