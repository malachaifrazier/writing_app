<article class="home">
	<div class="breadcrumb">
	  <%= link_to 'Dashboard', home_index_path, class: "current-selection" %>
	</div>
	


	<% if current_user.entries %>
		<% if current_user.am_writing? == true %>
			<div class="hero">
		<% else %>
			<div class="hero-not">
		<% end %>

	<% end %>
		<div class="hero-inner">
			<div class="hero-copy">
				<h1>Your Dashboard</h1>
				<p>You are currently <%= link_to @goal.type_is_dashboard.downcase, goal_path(@goal) %> "<em><%= link_to @project.name, project_goals_path(@project) %></em>".</p>	
			</div>
	    
	    	<div class="write-now">
		<%= link_to "Write Now!", new_project_entry_path(:project_id => @project.id, :goal_id => @goal) %>
			</div> <br>
		</div>
	</div>
</article>

