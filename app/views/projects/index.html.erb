<article class="article">
  <div class="breadcrumb">
    <%= link_to 'Dashboard', home_index_path %>
    <%= link_to 'My Projects', projects_path, class: "current-selection" %>
  </div>

  <h1 class="main-title">My Projects</h1>

      <% @projects.each do |project| %>

        <div class="card project">
          <div class="card-image">
              <h3 class="card-image title"><%= link_to project.name, project_goals_path(project) %></h3> 
          </div>

          <div class="card-header">
            <%= project.type_is.capitalize %>
          </div>

          <div class="card-copy">
            <% if project.deadline %>
              <p>Deadline: <%= project.deadline.strftime("%A, %b %d") %> </p>
            <% end %>
          </div>

          <div class="card-stats">
            <ul>
              <li><%= ChronicDuration.output(project.total_time_spent, :format => :short, :units => 2) %><span>Time Spent</span></li>
              <% if project.entries %>
                <li><%= project.entries.length %><span>Entries</span></li>
              <% end %>
              <% if project.deadline %>
                <li><%= time_left(project.deadline) %><span>Days Left</span></li>
              <% end %>
            </ul>

            <ul class="edit-button">
              <li ><span class="edit"><%= link_to 'Edit', edit_project_path(project) %></span></li>
            </ul>
          </div>
        </div>
      <% end %>
 
  <div class="button"><%= link_to 'New Project', new_project_path %></div>

</article>


<section class="stats">
  <% if @current_user.entries.empty? %> 
    <% else %>
      <div>
        <h3>Stats</h3>
          <p>You've spent <%= distance_of_time_in_words(current_user.total_time_writing) %> writing</em></p>
      </div>
  <% end %>
</section>

