<h1>Goal Index Page</h1>
<p><%= link_to "Make a New Goal", new_project_goal_path(@project) %> </p>

<% @goals.each do |goal| %>
	<strong>Date:</strong>	<%= goal.created_at.strftime("%A, %b %d") %> <br>
	<strong>Name:</strong>	<%= goal.name %> <br>
	<strong>Kind:</strong>	<%= goal.type_is %> <br>
	<strong>Deadline:</strong>	<%= goal.deadline %> <br> 

	<%= link_to 'View Goal', goal_path(goal) %> | <%= link_to 'Edit Goal', edit_goal_path(goal) %>
	<hr>
<% end %>